<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text_color</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="edit_text_begin">
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:alpha">0.5</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Quiz_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:background">@color/background_default</item>

    </style>

    <style name="title_style">
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:alpha">0.5</item>
    </style>
    <style name="button_categorie_style">
        <item name="android:paddingLeft">@dimen/categorie_button_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/categorie_button_horizontal_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/categorie_size</item>

    </style>


</resources>
