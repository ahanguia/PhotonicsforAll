<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_accueuil">
    <include
        layout="@layout/header"
        ></include>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.nevyan.photonicsforall.Categories.basicsPhotonicsActivity"
    android:background="@mipmap/background_accueuil"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:context="com.android.nevyan.photonicsforall.CategoriesActivity"
        android:id="@+id/RL_bkgrd_transparent"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:layout_weight="0.8">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/btn_optical_communication"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_lightning"
            android:onClick="onClkUEQLightning"
            android:background="#00000000" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/btn_optical_storage"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_diplay"
            android:onClick="onClkUEQDisplay"
            android:background="#00000000" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:id="@+id/btn_image_n_video"
            android:scaleType="fitXY"
            android:src="@mipmap/btn_energy"
            android:onClick="onClkUEQEnergy"
            android:background="#00000000" />




    </LinearLayout>

</LinearLayout>
</LinearLayout>

