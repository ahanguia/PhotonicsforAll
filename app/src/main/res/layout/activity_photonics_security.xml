<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="0.4">
    <include
        layout="@layout/header"
        ></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:clickable="true"
        android:layout_weight="0.2"
        android:text="@string/metrology"
        android:background="@color/orange_d"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:onClick="onClkUEQMetrology"
        style="@style/button_categorie_style" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_weight="0.2"
        android:text="@string/safety_n_security"
        android:background="@color/orange_l1"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:onClick="onClkUEQSafetySecurity"
        style="@style/button_categorie_style" />



</LinearLayout>